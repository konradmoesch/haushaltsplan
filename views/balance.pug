extends layout

block content
    h1.ui.header= title
    .ui.form
        .fields
            .field
                label Startdatum
                .ui.calendar#rangestart
                    .ui.input.left.icon
                        i.calendar.icon
                        input#datepickerStart(type='text' placeholder='Startdatum' name='dateStart')
            .field
                label Enddatum
                .ui.calendar#rangeend
                    .ui.input.left.icon
                        i.calendar.icon
                        input#datepickerEnd(type='text' placeholder='Enddatum' name='dateEnd')
            .field
                label Schnellwechsel
                .ui.pagination.menu
                    a.icon.item#prevMonthBtn
                        i.left.chevron.icon
                    .disabled.item#monthDisplay April
                    a.icon.item#nextMonthBtn
                        i.right.chevron.icon

    canvas#barChart

    .center
        .ui.three.statistics
            .green.statistic
                .value#statEarnings Fehler
                .label
                    | Einnahmen
            .red.statistic
                .value#statExpenses Fehler
                .label
                    | Ausgaben
            .statistic
                .value#statBalance Fehler
                .label
                    | Bilanz

    script.
        userID = #{user.id}

    script(src='javascripts/balance.js')

