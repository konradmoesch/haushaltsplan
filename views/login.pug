doctype html
html(lang='de')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='shortcut icon', type='image/x-icon', href='/img/favicon.ico')

        link(rel='stylesheet', href='/libraries/css/fa-all.min.css')
        link(rel='stylesheet', href='/semantic/semantic.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/login.css')

        link(rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png")
        link(rel="manifest" href="/favicons/site.webmanifest")
        link(rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="msapplication-TileColor" content="#2b5797")
        meta(name="theme-color" content="#ffffff")

    body
        .ui.middle.aligned.center.aligned.grid
            .column
                h2.ui.teal.image.header
                    img.image(src='/images/logo.png')
                    .content
                        | Bitte einloggen
                .ui.large.form#form
                    .ui.stacked.segment
                        .field
                            .ui.left.icon.input
                                i.user.icon
                                input#login-username(type="text", name="username", placeholder="Nutzername")
                        .field
                            .ui.left.icon.input
                                i.lock.icon
                                input#login-password(type="password", name="password", placeholder="Passwort")
                        button.ui.fluid.large.teal.submit.button(onclick="login()") Login
                    .ui.error.message#errorbox
                .ui.message Noch kein Konto?
                    a(href="/login/signup") Konto erstellen
        script(src='/libraries/js/fa-all.min.js')
        script(src='/libraries/js/jquery-3.6.0.min.js')
        script(src='/semantic/semantic.js')
        script(src='/libraries/js/moment-with-locales.js')
        script(src='/javascripts/login.js')
